        "preact/": "https://esm.sh/preact@10.15.1/",
        "preact": "https://esm.sh/preact@10.15.1" ,

        "Oak" : "https://deno.land/x/oak@v12.6.0/mod.ts"
    },

    "compilerOptions" : {

        "jsxImportSource": "preact" ,
        "jsx" : "react-jsx" ,

